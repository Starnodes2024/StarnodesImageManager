    "thumbnail": {
      "background": "#ffffff",
      "text": "#333333",
      "textSecondary": "#666666",
      "selected": "#e6f2ff",
      "selectedText": "#333333",
      "border": "#d0d0d0",
      "shadow": "#c0c0c0"
