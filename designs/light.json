      "border": "#d0d0d0",
      "header": "#f0f0f0"
    },
    "progressBar": {
      "background": "#f0f0f0",
      "progress": "#4b6eaf",
      "text": "#ffffff"
    },
    "link": {
      "text": "#0066cc",
      "hover": "#0055aa",
      "visited": "#551a8b"
    },
    "error": {
      "text": "#cc0000",
      "background": "#ffeeee"
    },
    "warning": {
      "text": "#cc6600",
      "background": "#fff5e6"
